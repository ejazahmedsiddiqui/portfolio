generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id               String   @id @default(uuid())
  title            String
  slug             String   @unique
  shortDescription String
  fullDescription  String
  techStack        Json
  githubUrl        String?
  liveUrl          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
